<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="/assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>Issues</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="/assets/css/animate.min.css" rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="/assets/css/light-bootstrap-dashboard.css" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/assets/css/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
	<style media="screen">
	a {
    text-decoration: inherit;
		color: inherit;
}
		.vote{
			padding-left: 8%;
		}
		.vote i {
			cursor: pointer;
		}
		.upvoteCount {
			margin: 0px;
			margin-left: -40%;
			text-align: center;
		}
		.issuerow{
			margin-top: 2%;
		}
	</style>
</head>
<body>

<div class="wrapper">
<%- include side-bar.ejs %>
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/dashboard">Issues</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/users/signout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <a href="/polls/"><h4 class="title">Issues</h4></a>
                                <p class="category">Latest</p>
                            </div>
                            <div class="content">
															<%
															for(var i = 0; i < issues.length; i++) {
																var issue = issues[i];
															%>
                                <div class="row issuerow" id='<%=issue._id%>'>
																	<div class="col-md-1 vote">
																		<div class="row upvote" onclick="upvote('<%=issue._id%>')">
																			<i class="fa fa-chevron-up" aria-hidden="true"></i>
																		</div>
																		<div class="row">
																			<p class='upvoteCount'>
																				<%=issue.upvotes%>
																			</p>
																		</div>
																		<div class="row downvote" onclick="downvote('<%=issue._id%>')">
																			<i class="fa fa-chevron-down" aria-hidden="true"></i>
																		</div>
																	</div>
																	<a href="/issues/getissue/<%=issue._id%>">
																		<div class="col-md-8" style="cursor:pointer">
																			<h4 style="margin-top:0px"><%=issue.name%></h4>
																			<h6 style="font-weight:500"><%=issue.description%></h5>
																		</div>
																	</a>
																	<div class="col-md-2">
														<% if(!issue.marked_for_consideration) {%>
															<h4 style="margin-top:10%;color:yellow">Pending</h4>
														<%}else{
															if(issue.resolved.mesasge == 'false') {%>
																<h4 style="margin-top:10%;color:blue">Under Review</h4>
															<%} else {
																if(issue.resolved.success) {%>
																	<h4 style="margin-top:10%;color:green">Accepted</h4>
																<%}else{%>
																	<h4 style="margin-top:10%;color:red">Rejected</h4>
																<%}
															}
														}%>
																	</div>
                                </div>
																<%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%- include footer.ejs %>

    </div>
</div>




    <!--   Core JS Files   -->
    <script src="/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
	<script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>

	<!--  Checkbox, Radio & Switch Plugins -->
	<script src="/assets/js/bootstrap-checkbox-radio-switch.js"></script>

	<!--  Charts Plugin -->
	<script src="/assets/js/chartist.min.js"></script>
		<script src="/assets/js/chartist-plugin-legend.js"></script>

    <!--  Notifications Plugin    -->
    <script src="/assets/js/bootstrap-notify.js"></script>

    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
	<script src="/assets/js/light-bootstrap-dashboard.js"></script>

	<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
	<script src="/assets/js/demo.js"></script>
<script type="text/javascript">
function upvote(id) {
	$.ajax({
		method : 'GET',
		url : '/issues/upvote/'+id,
		success : function(data) {
			$('#'+id+' .upvoteCount').html(data.votes);
			$('#'+id+' .upvote').attr('onclick',null);
			$('#'+id+' .downvote').attr('onclick','downvote("'+id+'")');
		}
	});
}
function downvote(id) {
	$.ajax({
		method : 'GET',
		url : '/issues/downvote/'+id,
		success : function(data) {
			$('#'+id+' .upvoteCount').html(data.votes);
			$('#'+id+' .downvote').attr('onclick',null);
			$('#'+id+' .upvote').attr('onclick','upvote("'+id+'")');
		}
	});
}
</script>
</body>
</html>
