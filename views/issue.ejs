</body>
<script type="text/javascript">
	function upvote(id) {
		$.get({
			url : '/issues/upvote/'+id,
			success : function(data) {
				$('#'+id+' .upvoteCount').html(data.votes);
				$('#'+id+' .downvote').attr('onclick',null);
				$('#'+id+' .upvote').attr('onclick','upvote("'+id+'")');
			}
		});
	}
	function downvote(id) {
		$.get({
			url : '/issues/downvote/'+id,
			success : function(data) {
				$('#'+id+' .upvoteCount').html(data.votes);
				$('#'+id+' .upvote').attr('onclick',null);
				$('#'+id+' .downvote').attr('onclick','downvote("'+id+'")');
			}
		});
	}
</script>
</html>
