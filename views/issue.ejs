<body>

<div class="wrapper">
<%- include side-bar.ejs %>
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/dashboard">Issue for Bhubaneswar</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/users/signout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row" id='<%=issue._id%>'>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                              <div class="row">
																<div class="col-md-1 vote">
																	<div class="row upvote" onclick="upvote('<%=issue._id%>')">
																		<i class="fa fa-chevron-up fa-2x" aria-hidden="true"></i>
																	</div>
																	<div class="row">
																		<p class='upvoteCount'>
																			<%=issue.upvotes%>
																		</p>
																	</div>
																	<div class="row downvote" onclick="downvote('<%=issue._id%>')">
																		<i class="fa fa-chevron-down fa-2x" aria-hidden="true"></i>
																	</div>
																</div>
                                <div class="col-md-8">
                                  <a href="/polls/"><h4 class="title"><%=issue.name%></h4></a>
                                  <p class="category"><%=issue.description%></p>
                                </div>
                                <div class="col-md-2">
                                  <h2 style="margin-top:30%"><% if(issue.marked_for_consideration) {
																	%>
																	Reviewing
																	<%}
																	else{
																	%>Pending<%
																}%></h2>
                                </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="card">
                      <div class="content">
                        <div id="disqus_thread"></div>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
        </div>

<%- include footer.ejs %>

    </div>
</div>




